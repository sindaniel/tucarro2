<div class="body-content outer-top-xs">
<div class='container'>
<div class='row outer-bottom-sm'>
<div class='col-md-3 sidebar'>
<!-- ================================== TOP NAVIGATION ================================== -->
  <%= render 'includes/eliminar' %>

<%= render 'includes/categoriasmenu' %>
<!-- ================================== TOP NAVIGATION : END ================================== -->
