                  <h3 style="font-size:50px;"><%= @planes[3].nombre %></h3></div>
              </div>
            </td>

          </tr>

          <%

          def calculuarPrecio index

            if session[:user].nil?
              number_to_currency @planes[index].precio1, precision: 0
            else
              if @user.typeuser == 0
                number_to_currency @planes[index].precio1, precision: 0
              else
                number_to_currency @planes[index].precio2, precision: 0
              end

          end


          end

          %>
          <tr>
            <th>PRECIO</th>
            <td>
              <div class="product-price">
                <span class="price" style="font-size:30px;">
                  <%= calculuarPrecio 0 %>
                </span>
              </div>
            </td>

            <td>
              <div class="product-price">
                <span class="price" style="font-size:30px;"> <%= calculuarPrecio 1 %> </span>
              </div>
            </td>

            <td>
