<div class="body-content outer-top-xs">
  <div class='container'>
    <div class="row product-comparison inner-bottom-sm">
      <h1 class="page-title text-center">NUESTRAS TARIFAS</h1>
      <div class="table-responsive">
        <table class="table table-bordered compare-table inner-top-vs">
          <tr>
            <th>PLANES</th>
            <td>
              <div class="product">
                <div class="product-image">
                  <h3 style="font-size:50px;"><%= @planes[0].nombre %></h3></div>
              </div>
            </td>

            <td>
              <div class="product">
                <div class="product-image">
                  <h3 style="font-size:50px;"><%= @planes[1].nombre %></h3></div>
