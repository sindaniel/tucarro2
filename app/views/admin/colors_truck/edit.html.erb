<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Color <small>/ Agregar</small>
    </h1>
    <%= render 'admin/includes/top' %>
  </div>
</div>




<!-- /.row -->
<%  if @color.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <%= pluralize(@color.errors.count, "Errores") %> tratando de guardar:
      </div>
      <p>
      <ul>
        <% @color.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
      </p>
    </div>
<% end %>
<!-- /.row -->


<div class="row">
  <div class="col-md-12">



    <%= form_for @color, :url => admin_colors_truck_path, :method=>'put' do |f|  %>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :name, 'Nombre de color' %>
              <%= f.text_field :name, :class =>'form-control'  %>
            </div>
          </div>



        </div>










        <%= f.submit 'Guardar', :class=> 'btn btn-info' %>
        <%=  link_to 'Cancelar', admin_colors_truck_index_path, :class=>'btn btn-warning' %>
    <% end %>

  </div>
</div>









