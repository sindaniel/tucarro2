<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Referencia <small>/ editar</small>
    </h1>
    <%= render 'admin/includes/top' %>
  </div>
</div>

<!-- /.row -->
<%  if @referencia.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <%= pluralize(@sub.errors.count, "Errores") %> tratando de guardar:
      </div>
      <p>
      <ul>
        <% @referencia.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
      </p>
    </div>
<% end %>
<!-- /.row -->


<div class="row">
  <div class="col-md-12">



    <%= form_for @referencia, :url => admin_type_truck_referencia_path, :method=>'put' do |f|  %>

        <div class="form-group">
          <%= f.label :name, 'Nombre referencia' %>
          <%= f.text_field :name, :class =>'form-control'  %>
        </div>

        <%= f.submit 'Guardar', :class=> 'btn btn-info' %>
        <%=  link_to 'Cancelar', admin_type_truck_referencias_path, :class=>'btn btn-warning' %>
    <% end %>



  </div>
</div>








