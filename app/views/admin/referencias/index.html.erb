<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Referencias <small>Camiones / <%= @truck.name %></small>
    </h1>
    <%= render 'admin/includes/top' %>
  </div>
</div>

<!-- /.row -->
<% if flash[:notice] %>

    <div class="row">
      <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= flash[:notice] %>
        </div>
      </div>
    </div>


<% end %>

<!-- /.row -->

<div class="row">
  <div class="col-md-12">
    <p>
      <%= link_to 'Nueva referencia', new_admin_type_truck_referencia_path(params[:type_truck_id]),:method=>'get', :class=>'btn  btn-primary' %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">



    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% @referencias.each do |referencia| %>
            <tr>


              <td>
                <%= referencia.name %>
              </td>
              <td>


                <%= link_to 'Editar', edit_admin_type_truck_referencia_path( referencia.type_truck_id, referencia.id), :class=>'btn btn-info' %>
                <%= link_to 'Eliminar', {:controller => 'referencias', :action => 'destroy', :id => referencia.id}, :data => {:confirm => 'Estas seguro de eliminar este elemento?'}, :method => 'DELETE',  :class=>'btn btn-danger' %>
              </td>
            </tr>
        <% end %>


        </tbody>



      </table>
    </div>



  </div>
</div>
<!-- /.row -->
