          </div>
        </div>

        <div class="col-md-6">

        </div>
      </div>




        <%= f.submit 'Guardar', :class=> 'btn btn-info' %>
        <%=  link_to 'Cancelar', admin_trucks_path, :class=>'btn btn-warning' %>
    <% end %>



  </div>
</div>








