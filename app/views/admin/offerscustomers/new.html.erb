<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Plan <small>/ Agregar</small>
    </h1>
    <%= render 'admin/includes/top' %>
  </div>
</div>

<!-- /.row -->
<%  if @offer.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <%= pluralize(@offer.errors.count, "Errores") %> tratando de guardar:
      </div>
      <p>
      <ul>
        <% @extra.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
      </p>
    </div>
<% end %>
<!-- /.row -->


<div class="row">
  <div class="col-md-12">



    <%= form_for @offer, :url => admin_customer_offerscustomers_path, :method=>'post' do |f|  %>







        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :offer_id, 'Plan para asignar' %>
              <%= f.collection_select :offer_id, Offer.order(:id),:id,:nombre, {prompt: 'Selecccione'}, {class: 'form-control'} %>
            </div>
          </div>




        </div>







        <%= f.submit 'Guardar', :class=> 'btn btn-info' %>
        <%=  link_to 'Cancelar', admin_trucks_path, :class=>'btn btn-warning' %>
    <% end %>

  </div>
</div>









