<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Planes / <small><%= @offers[0].customer.name %></small>
    </h1>
    <%= render 'admin/includes/top' %>
  </div>
</div>

<!-- /.row -->
<% if flash[:notice] %>

    <div class="row">
      <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= flash[:notice] %>
        </div>
      </div>
    </div>


<% end %>



<!--Tabla normal-->


<%= link_to 'Nuevo Plan', new_admin_customer_offerscustomer_path(params[:customer_id]),:method=>'get', :class=>'btn  btn-primary' %>
<br/><br/>

<div class="row">
  <div class="col-lg-12">

    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
          <th>Plan</th>
          <th>Fecha de compra</th>

        </tr>
        </thead>
        <tbody>
        <% @offers.each do |offer| %>
                <tr>
                  <td>
                    <%= offer.offer.nombre %>
                  </td>
                  <td>
                    <%= offer.updated_at.strftime('%Y-%m-%d %H:%M'); %>
                  </td>
                </tr>
        <% end %>

        </tbody>



            </table>
    </div>



  </div>
</div>
